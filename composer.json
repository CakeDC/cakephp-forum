{
    "name": "cakedc/cakephp-forum",
    "description": "Forum Plugin for CakePHP",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "forum", "cakedc"],
    "homepage": "https://github.com/CakeDC/cakephp-forum",
    "license": "MIT",
    "authors": [
        {
            "name": "CakeDC",
            "homepage": "http://www.cakedc.com",
            "role": "Author"
        },
        {
            "name": "Others",
            "homepage": "https://github.com/CakeDC/cakephp-forum/graphs/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/CakeDC/cakephp-forum/issues",
        "source": "https://github.com/CakeDC/cakephp-forum"
    },
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "^5.0",
        "muffin/slug": "^3.0",
        "muffin/orderly": "^3.0",
        "cakephp/migrations": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1.0",
        "cakephp/cakephp-codesniffer": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "CakeDC\\Forum\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakeDC\\Forum\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
            "TestApp\\": "tests/test_app/TestApp/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs --colors --parallel=16 -p src/ tests/",
        "cs-fix": "phpcbf --colors --parallel=16 -p src/ tests/",
        "phpstan": "tools/phpstan analyse",
        "psalm": "tools/psalm --show-info=false",
        "stan": [
            "@phpstan",
            "@psalm"
        ],
        "phpstan-tests": "tools/phpstan analyze -c tests/phpstan.neon",
        "phpstan-baseline": "tools/phpstan --generate-baseline",
        "psalm-baseline": "tools/psalm  --set-baseline=psalm-baseline.xml",
        "stan-setup": "phive install",
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
